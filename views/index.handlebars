<head>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css">
</head>
<body>
  <div class="container">
    <div class="row text-center">
      <h1>EAT_DA_BURGER!</h1>
      <img src="../public/assets/img/burger.jpeg">
    </div>
    <br><br>

    <div class="row">
      <!-- burgers to devour -->
      <div class="col-sm-6">
        <h2>To Devour</h2>
          <ul>
           {{#each burgers}}
              {{#unless devoured}}
                {{> burgers devoured=true}}
              {{/unless}}
           {{/each}}
          </ul>
      </div>
      <!-- devoured burgers -->
      <div class="col-sm-6">
        <h2>Devoured</h2>
          <ul>
            {{#each burgers}}
              {{#if devoured}}
                {{> burgers devoured=false}}
              {{/if}}
            {{/each}}
          </ul> 
      </div>
    </div>  
   
   <!-- form for entering burgers -->
    <div class="row text-center">
      <h2>Eat-Da-Burger!</h2>
      <form class="create-form">
        <div class="row">
          <div class="form-group">
            <div class="row text-center">
              <input style="height:100px" type="text" id="ca" name="name">
            </div>
            <div class="row text-center">
              <button type="submit">Submit</button>
            </div>
            <h6>Click "submit" to enter a burger you want to eat</h6>
          </div>  
        </div>
      </form>
    </div>
  </div>
</body>
